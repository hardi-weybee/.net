@model IEnumerable<InvoiceModel>

<div class="py-5">
    <div class="container">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Party Name</th>
                    <th scope="col">Product Name</th>
                    <th scope="col">Rate Of Product</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Total</th>
                </tr>
            </thead>

            @foreach (var assign in Model)
            {
                <tbody>
                    <tr>
                        <th scope="row">@assign.ID</th>
                        <td>@assign.PartyName</td>
                        <td>@assign.ProductName</td>
                        <td>@assign.CurrentRate</td>
                        <td>@assign.Quantity</td>
                        <td>@assign.Total</td>
                    </tr>
                </tbody>
            }
        </table>

        <div class="last">
            <div style="display:flex; justify-content:end;">
                <label class="ans font-weight-bold">Grand Total</label>
                <input class="font-weight-bold" style="width: 20%; border:none; font-size:larger;" value="@ViewBag.answer">
            </div>
        </div>
    </div>
</div>
